---
import { ViewTransitions } from "astro:transitions";
import ContentWrap from "@/components/ContentWrap/ContentWrap.astro";
import HeadCommon from "@/layout/Head/HeadCommon.astro";
import Title from "@/layout/Head/Title.astro";
import Footer from "@/layout/Footer/Footer.astro";

interface Props {
  pageTitle?: string;
}

const { pageTitle } = Astro.props;

const SITE_TITLE: string = "宮崎県架空信用組合";
---

<!doctype html>
<html lang="ja">
  <head>
    <HeadCommon />
    <Title pageTitle={pageTitle} siteTitle={SITE_TITLE} />
    <ViewTransitions />
  </head>
  <body class="text-neutral-900">
    <header class="bg-slate-950 text-white">
      <ContentWrap>
        <h1>{SITE_TITLE}</h1>
      </ContentWrap>
    </header>
    <main>
      <ContentWrap>
        <h2>あいうえお</h2>
      </ContentWrap>
    </main>
    <footer>
      <Footer siteTitle={SITE_TITLE} />
    </footer>
  </body>
</html>
